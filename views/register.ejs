<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width">
<title>Register: Teeling Recipes</title>
<link href='https://fonts.googleapis.com/css?family=Work+Sans:400,700|Merriweather' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div class="row login-form">
    <div class="container">
      <div class="circle"><div class="logo"><span>Teeling</span><br> Family Recipes</div></div>
      <div class="onehalf aligncenter">
        <h2>Register</h2>
        <form action="/signup" method="POST">
          <div class="clearfix mb-1">
            <p class="onehalf">
              <label>First Name</label>
              <input type="text" name="firstname"  />
            </p>
            <p class="onehalf last">
              <label>Last Name</label>
              <input type="text" name="lastname"  />
            </p>
          </div>
          <p>
            <label>Email</label>
            <input type="email" name="username"  />
          </p>
          <p>
            <label>Password</label>
            <input type="password" name="password"  />
          </p>
          <p><button class="btn btn-primary">Sign Up</button></p>
        </form>
      </div>
    </div>
    </div>
</body>
</html>
